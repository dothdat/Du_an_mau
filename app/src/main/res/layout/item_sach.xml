<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/khung2"
        android:padding="5sp"
        android:layout_margin="5sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_width="68dp"
            android:layout_height="74dp"
            android:layout_gravity="center"
            android:src="@drawable/book03" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txtMaSach"
                android:text="ID: "
                android:textSize="16sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtLoaiSach"
                android:text="Loại sách: "
                android:textSize="16sp"
                android:layout_width="280dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/txtTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tên sách: "
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtTacGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tác giả: "
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtGiaThue"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Giá thuê:" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txtSuaSach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20sp"
                    android:textColor="#E91E63"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Chỉnh sửa" />

                <TextView
                    android:id="@+id/txtXoaSach"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#2196F3"
                    android:textStyle="bold"
                    android:layout_weight="1"
                    android:text="Xóa" />
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>