<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/khung1"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMaTV"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Mã thành viên: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtTenTV"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Tên thành viên: "
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtSdtTV"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtDiaChiTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtChinhSuaThanhVien"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chỉnh sửa"
                android:textColor="#E91E63"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtXoaThanhVien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#2196F3"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>