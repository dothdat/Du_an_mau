<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="5sp"
        android:orientation="vertical"
        android:background="#C9F39A"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="CHỈNH SỬA LOẠI SÁCH"
            android:textColor="#F44336"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtChinhSuaLoaiSach"
            android:layout_marginBottom="10sp"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên loại sách"
            android:minHeight="48dp" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btnSuaLoaiSach"
            android:layout_marginBottom="5sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="LƯU" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btnHuyLoaiSach"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#604F4E"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HỦY" />


    </LinearLayout>

</androidx.cardview.widget.CardView>