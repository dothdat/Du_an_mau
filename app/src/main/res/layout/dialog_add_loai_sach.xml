<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="5sp"
        android:orientation="vertical"
        android:background="#B8E6EC"
        android:layout_margin="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:text="THÊM THỂ LOẠI SÁCH MỚI"
            android:textColor="#F44336"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtTheLoaiSach"
            android:layout_marginBottom="10sp"
            android:background="@drawable/custom_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập tên thể loại sách"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnThemTheLoaiSach"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5sp"
            android:backgroundTint="#4FD2E3"
            android:text="THÊM THỂ LOẠI SÁCH" />

        <Button
            android:layout_gravity="center"
            android:id="@+id/btnHuyTheLoaiSach"
            android:layout_marginBottom="10sp"
            android:backgroundTint="#D8655C"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HỦY" />


    </LinearLayout>

</androidx.cardview.widget.CardView>